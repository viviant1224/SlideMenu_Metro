<?xml version="1.0" encoding="utf-8"?>
<!-- 椭圆形正常大小 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
     android:shape="oval">  
    <!--点击背景-->  
    <item android:state_pressed="true">  
        <shape>  
             <!--色值-->  
            <solid android:color="@color/darkgreen" />  
            <!--圆角 半径-->  
            <corners android:radius="360dip" />
             <padding
		        android:left="10dp"
		        android:top="10dp"
		        android:right="10dp"
		        android:bottom="10dp"/>
        </shape>  
    </item>  
    <!--默认背景-->  
    <item>  
        <shape>  
            <solid android:color="@color/green" />  
            <corners android:radius="360dip" />
             <padding
		       android:left="10dp"
		       android:top="10dp"
		       android:right="10dp"
		       android:bottom="10dp"/>
        </shape>  
    </item>  
</selector> 